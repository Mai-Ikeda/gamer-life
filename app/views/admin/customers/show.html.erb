<div class="container">

  <div class="row mb-3">
    <h3>会員詳細</h3>
  </div>

  <div class="row mb-3">
    <div class="table col-4">
      <table>
        <tbody>
          <tr>
            <td>ユーザーネーム</td>
            <td><%= @customer.user_name %></td>
          </tr>
          <tr>
            <td>好きなゲーム</td>
            <td><%= @customer.like_game %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td>
              <% if @customer.is_deleted? %>
                <span class="text-invalid">有効</span>
              <% else %>
                <span class="text-active">退会</span>
              <% end %>
            </td>
          </tr>
          <tr>
            <td><%= link_to '編集する', edit_admin_customer_path(@customer), class:"btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div class="table col-6">
    <h3>投稿履歴</h3>
      <table>
        <thead>
          <tr>
            <th>投稿日</th>
            <th>タイトル</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @impressions.each do |impression| %>
          <tr>
            <td class="col-1"><%= impression.created_at.strftime('%Y/%m/%d') %></td>
            <td class="col-1"><%= impression.title %></td>
            <td class="col-1"><%= link_to "Show more", admin_impression_path(impression.id) %></td>
            <td class="col-2"><%= link_to "#{impression.comments.count} コメント", admin_impression_path(impression.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @impressions %>

</div>