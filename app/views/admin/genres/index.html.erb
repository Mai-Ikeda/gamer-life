<div class="container">
  
  <h3>ジャンル一覧</h3>
  
  <div class="btn btn-primary">
    <%= link_to 'ジャンル追加', new_admin_genre_path, class:'text-white' %>
  </div>
  <table>
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集", edit_admin_genre_path(genre.id), class:"btn btn-outline-success" %></td>
        <td><%= link_to "削除", admin_genre_path(genre.id),method: :delete, class:"btn btn-outline-danger" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>