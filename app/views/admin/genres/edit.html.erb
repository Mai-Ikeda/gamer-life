<h3>ジャンル編集</h3>

<%= form_with model: @genre, url: admin_genre_path do |f| %>
  <%= f.label :"ジャンル名" %>
  <%= f.text_field :name %>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active,"有効", class: "text-active" %>
  <%= f.radio_button :is_activem, false %>
  <%= f.label :is_active,"無効", class:"text-invalid" %>
  
  <%= f.submit '変更を保存' %>
<% end %>


