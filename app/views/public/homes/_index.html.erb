<div class="col-8">
  <table class="table">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th>投稿数</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to genre.impressions.count, impression_path(genre) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>